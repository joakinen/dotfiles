##
## Copy or symlink this to ~/.config/i3status/config
##

general {
    colors = true
    color_good = "#cccccc"
    color_bad = "#cc1616"
    color_degraded = "#55858e"
    interval = 2
}

order = "battery 0"
order += "cpu_usage"
order += "manana"

battery 0 {
	integer_battery_capacity = true
	hide_seconds = true
        format = "%percentage  "
        format_down = "No battery"
        status_chr = "CHR"
        status_bat = "BAT"
        status_unk = "UNK"
        status_full = "FULL"
        path = "/sys/class/power_supply/BAT0/uevent"
        low_threshold = 10
}

cpu_usage {
    format = "  %usage  "
}

manana {
    status_command ~/bin/manana-i3status.sh
}
